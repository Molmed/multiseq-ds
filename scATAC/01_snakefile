samples = ["REH", "GM12078"]
samples_combined = '_'.join(samples)

rule all:
    input:
         "out/" + samples_combined + "_seurat.rds" 


rule cellranger_atac_count:
    input: 
        ref_genome="/crex/data/Chromium/cellranger-ATAC-data/1.2.0/rackham/refdata-cellranger-atac-GRCh38-1.2.0",
        fastq="/crex/proj/uppstore2017165/nobackup/scATAC/fastq" 
    output:
        directory("out/{sample}_atac_count")
    params: 
        sample="{sample}",
        id = "{sample}_atac_count"
    shell: 
        """
        module load bioinfo-tools
        module load cellranger-ATAC/1.2.0

        cellranger-atac count --id={params.id} --reference={input.ref_genome} --fastqs={input.fastq} --sample={params.sample}
        
        mv {params.id} out 
        """

rule aggr_csv:
    input: 
        expand("out/{sample}_atac_count", sample=samples)
    output:
        "out/aggr.csv"
    shell:
        """
        FILE=out/aggr.csv

        echo library_id,fragments,cells >> $FILE

        for sample in {input}
        do
            echo $sample,$(realpath $sample/outs/fragments.tsv.gz),$(realpath $sample/outs/singlecell.csv) >> $FILE
        done
        """

rule cellranger_atac_aggr:
    input: 
        aggr_csv = "out/aggr.csv", 
        ref_genome="/crex/data/Chromium/cellranger-ATAC-data/1.2.0/rackham/refdata-cellranger-atac-GRCh38-1.2.0",
    output: 
        directory("out/" + samples_combined + "_atac_aggr")
    params:
        id = samples_combined + "_atac_aggr"
    shell: 
        """
        module load bioinfo-tools
        module load cellranger-ATAC/1.2.0 
        
        cellranger-atac aggr --id={params.id} --csv={input.aggr_csv} --reference={input.ref_genome} --normalize=depth --nosecondary 
        
        mv {params.id} out
        """

rule preprocess_seurat: 
    input: 
        "out/" + samples_combined + "_atac_aggr"
    output: 
        "out/" + samples_combined + "_seurat.rds"
    shell:
        """
        module load bioinfo-tools
        module load R/4.0.0 
        module load R_packages/4.0.0        

        Rscript --vanilla scripts/atac_preproc_seurat.R $(realpath {input}) {output}
        """
